{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "location": false
  },
  "rules": {
    "arrow-parens": 0,
    "prefer-const": 2,

    "babel/generator-star-spacing": 2,
    "babel/new-cap": [2, {capIsNewExceptions: ["GET", "POST", "PATCH", "PUT", "DELETE"]}],
    "babel/array-bracket-spacing": 2,
    "babel/object-curly-spacing": [2, "always"],
    "babel/object-shorthand": 2,
    "babel/arrow-parens": [2, "as-needed"],
    "babel/no-await-in-loop": 2
  }
}
